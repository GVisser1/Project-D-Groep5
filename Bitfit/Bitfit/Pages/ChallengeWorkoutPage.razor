@page "/challengeworkout"

<div style="height: 100px; max-height:100px;" class="row pl-4">
    @if (!UserPage.SignedIn)
    {
        <div>
            <h1>You are not signed in!</h1>
            <a role="button" class="btn btn-success" href="/">Login</a>
        </div>
    }
    else if (UserPage.SignedIn && CurrentWorkout1  == null)
    {
        <div>
            <h1>No data available</h1>
        </div>
    }
    else
    {
        <div class="row">
            <h1>Challenge Workouts</h1>
        </div>
        <br />
        <div class="row" style="max-width:100%">
            <div class="col">
                <h3>@CurrentWorkout1.Type Training: </h3>
                <hr>
                <div class="col" style="overflow-y:auto; height:700px; max-height:100%; background-color:#eeeeee">
                    <h5>
                        @foreach (var item in Workout1Array)
                        {
                            @item <br />
                        }
                    </h5><br />
                </div>
            </div>
            <div class="col">
                <h3>@CurrentWorkout2.Type Training: </h3>
                <hr>
                <div class="col" style="overflow-y:auto; height:700px; max-height:100%; background-color:#eeeeee">
                    <h5>
                        @foreach (var item in Workout2Array)
                        {
                            @item <br />
                        }
                    </h5><br />
                </div>
            </div>
            <div class="col">
                <h3>@CurrentWorkout3.Type Training: </h3>
                <hr>
                <div class="col" style="overflow-y:auto; height:700px; max-height:100%; background-color:#eeeeee">
                    <h5>
                        @foreach (var item in Workout3Array)
                        {
                            @item <br />
                        }
                    </h5><br />
                </div>
            </div>
        </div>
    }
</div>